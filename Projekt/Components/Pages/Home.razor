@page "/"
@using BlazorBootstrap
@using Projekt.Database
@using Projekt.Items
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.EntityFrameworkCore
@inject Database db
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>My Games and more</PageTitle>

<h1>Games</h1>
<QuickGrid @ref="Grid" Class="table table-striped m-0"
           Items="@db.Games"
           ItemKey="@(x => x.ID)">
    <PropertyColumn Title="ID"
                    Property="@(x => x.ID)"
                    Sortable="true"/>
    <PropertyColumn Title="Title"
                    Property="@(x => x.Name)"
                    Sortable="true"/>
    <PropertyColumn Title="Platform"
                    Property="@(x => x.Platform)"
                    Sortable="true"/>
    <PropertyColumn Title="Edition"
                    Property="@(x => x.Edition)"/>
    <PropertyColumn Title="Value"
                    Property="@(x => x.ValueOfItem)"/>
    <TemplateColumn>
        <div>
            <a @onclick="async() => await Delete(context)">
                <span class="bi bi-trash" aria-hidden="true" style="color: #a52834"></span>
            </a>
        </div>
    </TemplateColumn>
</QuickGrid>
<Modal @ref="modal" title="Add game" IsVerticallyCentered="true">
    <BodyTemplate>
        <form method="post" @onsubmit="async() => await Submit(Game)" @formname="starship-plain-form">
            <AntiforgeryToken/>
            <div>
                <label class="form-label" style="width: 100%">
                    Title:
                    <InputText class="form-control" style="border-color: #A9A9A9" @bind-Value="Game!.Name"/>
                </label>
            </div>
            <div>
                <label class="form-label" style="width: 100%">
                    Platform:
                    <select class="form-control" style="border-color: #A9A9A9" @bind="Game!.Platform">
                        @foreach (var platform in Methods.values)
                        {
                            <option value="@platform">@platform</option>
                        }
                    </select>
                </label>
            </div>
            <div>
                <label class="form-label" style="width: 100%">
                    Edition:
                    <InputText class="form-control" style="border-color: #A9A9A9" @bind-Value="Game!.Edition"/>
                </label>
            </div>
            <br/>
            <div>
                <button class="btn btn-secondary" @onclick="OnHideModalClick" type="submit">Add</button>
            </div>
        </form>
    </BodyTemplate>
</Modal>
<br/>
<div style="display: flex; flex-direction: row; align-items: flex-start">
    <Button Color="ButtonColor.Secondary" @onclick="OnShowModalClick">Add</Button>
    <div style="margin-left: auto; display: flex; flex-direction: column; align-items: flex-start;">
        <p style="margin-bottom: 0.5rem; text-align: right; width: 100%">
            Total games: @count
        </p>
    </div>
</div>
@code {
    QuickGrid<Game> Grid;
    private Modal modal = default!;

    private int count = 0;
    
    public async Task OnShowModalClick()
    {
        Game = new Game();
        await modal.ShowAsync();
    }

    public async Task OnHideModalClick()
    {
        await modal.HideAsync();
    }
    
    [SupplyParameterFromForm]
    private Game? Game { get; set; }

    protected override void OnInitialized()
    {
        Game ??= new();
        count = db.Games.Count();
    }
        

    private async Task Submit(Game game)
    {
        if (string.IsNullOrWhiteSpace(game.Name) ||
            string.IsNullOrWhiteSpace(game.Edition) ||
            string.IsNullOrWhiteSpace(game.Platform))
        {
            await JS.InvokeVoidAsync("alert", "Something went wrong, try to fill all parameters");
            var entry = db.Entry(game);
            if (entry.State != EntityState.Detached)
            {
                entry.State = EntityState.Detached;
            }
            return;
        }

        if (game.Edition == "Digital")
        {
            game.ValueOfItem = "$0.00";
        }
        else
        {
            game.ValueOfItem = Methods.GameValueScraper(game.Name, game.Platform);
        }
        db.Games.Add(game);
        await db.SaveChangesAsync();
        await Grid.RefreshDataAsync();
        ++count;
    }

    private async Task Delete(Game game)
    {
        db.Games.Remove(game);
        await db.SaveChangesAsync();
        await Grid.RefreshDataAsync();
        --count;
    }
}